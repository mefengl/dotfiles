#!/usr/bin/env sh
# try

# meta
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# config
yabai -m config layout bsp
yabai -m config auto_balance on
yabai -m config insert_direction second_child

# manage off (sticky will show in all spaces)
yabai -m rule --add app="System Settings" manage=off
yabai -m rule --add app="Finder" manage=off
yabai -m rule --add app="1Password" manage=off

# signals
yabai -m signal --add event=window_moved action='[ $(yabai -m query --windows | jq ". | length") -eq 2 ] && sleep 0.5 && yabai -m query --windows | jq -re ".[] | select(.app == \"kitty\") | .id" | xargs -I{} yabai -m window {} --swap east'

